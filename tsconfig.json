{
	"compilerOptions": {
		"target": "es2019",
		"module": "CommonJS",
		"lib": [
			"es2019",
			"dom",
			"dom.iterable"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": false,
		"noImplicitAny": true,
		"jsx": "preserve",
		"outDir": "./dist",
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/**/*.test.ts"
	]
}
